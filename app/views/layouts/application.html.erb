<!DOCTYPE html>
<html>
  <head>
    <title>Rillow</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@500&family=Open+Sans:wght@100;200;400;500&family=Quattrocento+Sans:wght@700&display=swap" rel="stylesheet">
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
    <script>
      window.currentUser = {
        "id": "<%= current_user.id %>",
        "email": "<%= current_user.email %>"
      }
      window.mainBgURL = "<%= image_url('main_bg.png') %>";
    </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
